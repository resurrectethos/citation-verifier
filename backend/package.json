{
  "name": "citation-verifier-backend",
  "version": "2.0.0",
  "description": "Citation verification backend worker",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "logs": "wrangler tail --format pretty",
    "kv:list": "wrangler kv:namespace list",
    "kv:create": "wrangler kv:namespace create CITATION_VERIFIER_USERS",
    "secret:list": "wrangler secret list",
    "login": "wrangler login",
    "whoami": "wrangler whoami"
  },
  "devDependencies": {
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}